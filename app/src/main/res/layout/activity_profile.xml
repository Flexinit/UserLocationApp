<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentGrey"
    tools:context="com.afrinettelecom.com.ui.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/image_choose_avatar"
            android:src="@drawable/user_avatar"
            android:layout_centerInParent="true"/>-->

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/DarkGrey"
            android:elevation="100dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/DarkGrey"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_choose_avatar"
                    android:layout_width="230dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/user_avatar" />

                <TextView
                    android:id="@+id/text_choose_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_choose_avatar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="@string/choose_an_avatar"
                    android:textColor="@color/linkBlue"
                    android:drawableLeft="@android:drawable/ic_menu_upload"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:onClick="removeImage"
                    android:id="@+id/text_remove_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_choose_avatar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="@string/remove_an_avatar"
                    android:textColor="@color/linkBlue"
                    android:drawableLeft="@android:drawable/ic_delete"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


    <FrameLayout

        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/DarkGrey"
        android:visibility="gone">

    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>